# ==============================================
# FlowDocs Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values

# ==============================================
# Core Application
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# Database
# ==============================================
# PostgreSQL connection string
DATABASE_URL=your-database-url
# ==============================================
# Authentication (Better Auth)
# ==============================================
# Generate a random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-better-auth-secret
BETTER_AUTH_URL=http://localhost:3000

# ==============================================
# Google OAuth (Optional)
# ==============================================
# Used for both Google Sign-In and Google Drive integration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/integrations/google-drive/callback

# ==============================================
# Public URLs
# ==============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_C15T_URL=https://placeholder.c15t.dev

# Vercel deployment URLs (auto-populated by Vercel)
NEXT_PUBLIC_VERCEL_ENV=
NEXT_PUBLIC_VERCEL_URL=
VERCEL_URL=

# ==============================================
# Search (Typesense)
# ==============================================
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=xyz

# ==============================================
# AI Features (OpenRouter)
# ==============================================
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ==============================================
# File Storage
# ==============================================
# Storage provider: "s3" or "r2"
STORAGE_PROVIDER=s3

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name

# Cloudflare R2 Configuration (alternative to S3)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=your-r2-bucket-name

# File Upload Settings
MAX_FILE_SIZE=52428800
IMAGE_QUALITY=80
THUMBNAIL_SIZES=150,300,600

# ==============================================
# Virus Scanning (Optional)
# ==============================================
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_PROVIDER=clamav

# ClamAV Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# VirusTotal Configuration (alternative to ClamAV)
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# ==============================================
# Email (Resend)
# ==============================================
# Get your API key from https://resend.com/
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=FlowDocs
SUPPORT_EMAIL=support@yourdomain.com

# ==============================================
# Redis (Optional - for WebSocket scaling)
# ==============================================
REDIS_URL=redis://localhost:6379
