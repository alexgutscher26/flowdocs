{
  "functions": {
    "app/**/*.{ts,tsx}": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/**/*.{ts,tsx}": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs",
  "buildCommand": "bun run build",
  "installCommand": "bun ci",
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/socket.io/:path*",
      "destination": "/api/socket.io/:path*"
    }
  ]
}
